@implements IDisposable
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@using Microsoft.AspNetCore.Components.Routing
@using System.Security.Claims

<div class="top-row ps-3 navbar navbar-dark bg-danger">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SistemaFacturacion</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (usuarioActual?.Identity?.IsAuthenticated == true &&
        usuarioActual.Identity.Name == "Admin@gmail.com")
        {
            <!-- Menú restringido para admin@example.com -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Dashboard">
                    <span class="bi bi-speedometer2" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="productos">
                    <span class="bi bi-cart" style="font-size: 1.5em;" aria-hidden="true"></span> Productos
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="inventario">
                    <span class="bi bi-file-earmark-bar-graph" style="font-size: 1.5em;" aria-hidden="true"></span> Inventario
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Financiamientos">
                    <span class="bi bi-currency-dollar" style="font-size: 1.5em;" aria-hidden="true"></span> Financiamientos
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="CuentasXcobrar">
                    <span class="bi bi-file-earmark-text" style="font-size: 1.5em;" aria-hidden="true"></span> Cuentas por Cobrar
                </NavLink>
            </div>
        }
        else if (usuarioActual?.Identity?.IsAuthenticated == true &&
        usuarioActual.Identity.Name == "User@gmail.com")
        {
            <!-- Menú completo para User@gmail.com -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Dashboard">
                    <span class="bi bi-speedometer2" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="productos">
                    <span class="bi bi-cart" style="font-size: 1.5em;" aria-hidden="true"></span> Productos
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="inventario">
                    <span class="bi bi-file-earmark-bar-graph" style="font-size: 1.5em;" aria-hidden="true"></span> Inventario
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Ventas">
                    <span class="bi bi-file-text" style="font-size: 1.5em;" aria-hidden="true"></span> Ventas
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Financiamientos">
                    <span class="bi bi-currency-dollar" style="font-size: 1.5em;" aria-hidden="true"></span> Financiamientos
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="CuentasXcobrar">
                    <span class="bi bi-file-earmark-text" style="font-size: 1.5em;" aria-hidden="true"></span> Cuentas por Cobrar
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Reparaciones">
                    <span class="bi bi-tools" style="font-size: 1.5em;" aria-hidden="true"></span> Reparaciones
                </NavLink>
            </div>
        }
        

        <!-- Logout siempre visible -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All" @onclick="CerrarSidebar">
                <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Logout
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized></Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Identity/Account/Login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>


@code {
    private string? currentUrl;
    private ClaimsPrincipal? usuarioActual;

    protected override async Task OnInitializedAsync()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        usuarioActual = authState.User;
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private async Task CerrarSidebar()
    {
        var toggler = await JSRuntime.InvokeAsync<IJSObjectReference>("eval", "document.querySelector('.navbar-toggler')");
        if (toggler != null)
        {
            await toggler.InvokeVoidAsync("click");
        }
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}