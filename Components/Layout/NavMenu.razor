@implements IDisposable
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.JSInterop

<div class="top-row ps-3 navbar navbar-dark bg-danger">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SistemaFacturacion</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- Menú para Admin -->
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Dashboard">
                        <span class="bi bi-speedometer2" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Ventas">
                        <span class="bi bi-file-text align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Ventas
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Financiamientos">
                        <span class="bi bi-currency-dollar align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Financiamientos
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/CuentasXcobrar">
                        <span class="bi bi-file-earmark-text align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Cuentas por Cobrar
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Reparaciones">
                        <span class="bi bi-tools align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Reparaciones
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Menú para Empleado -->
        <AuthorizeView Roles="Empleado">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Dashboard">
                        <span class="bi bi-speedometer2" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Productos">
                        <span class="bi bi-cart align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Productos
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Inventario">
                        <span class="bi bi-file-earmark-bar-graph align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Inventario
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Ventas">
                        <span class="bi bi-file-text align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Ventas
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Financiamientos">
                        <span class="bi bi-currency-dollar align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Financiamientos
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/CuentasXcobrar">
                        <span class="bi bi-file-earmark-text align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Cuentas por Cobrar
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Reparaciones">
                        <span class="bi bi-tools align-items-center d-flex justify-content-center" style="font-size: 1.5em;" aria-hidden="true"></span> Reparaciones
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Logout común para todos los usuarios autenticados -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All" @onclick="CerrarSidebar">
                <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Logout
            </NavLink>
        </div>

        <!-- Menú para usuarios no autenticados -->
        <AuthorizeView>
            <Authorized>

            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Identity/Account/Login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private async Task CerrarSidebar()
    {
        var toggler = await JSRuntime.InvokeAsync<IJSObjectReference>("eval", "document.querySelector('.navbar-toggler')");
        if (toggler != null)
        {
            await toggler.InvokeVoidAsync("click");
        }
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
